<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/studentScore_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingHorizontal="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quiz Feedback"
                style="@style/text_quicksand_bold.header2"
                android:textColor="@color/violet"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:contentPadding="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="#f3f3f3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Score"
                            style="@style/text_quicksand_bold.body2"
                            android:textColor="@color/violet"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="-8dp">
                            <TextView
                                android:id="@+id/studentScore_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/text_quicksand_bold.header2"
                                android:textColor="@color/violet"
                                />
                            <TextView
                                android:id="@+id/totalPts_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/text_quicksand.body"
                                android:layout_gravity="center"
                                android:textColor="@color/violet"
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/studentName_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/text_quicksand_bold.body2"
                            android:textColor="@color/violet"
                            android:layout_marginTop="-8dp"/>
                        <TextView
                            android:id="@+id/studentEmail_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/text_quicksand.body"
                            android:textColor="@color/violet"
                            android:layout_marginTop="-3dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:contentPadding="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#f3f3f3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Attempt started:"
                                style="@style/text_quicksand_bold.body2"
                                android:textColor="@color/violet"/>
                            <TextView
                                android:id="@+id/startAttempt_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/text_quicksand.body"
                                android:textColor="@color/violet"
                                android:layout_marginTop="-3dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:contentPadding="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#f3f3f3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Attempt ended:"
                                style="@style/text_quicksand_bold.body2"
                                android:textColor="@color/violet"/>
                            <TextView
                                android:id="@+id/endAttempt_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/text_quicksand.body"
                                android:textColor="@color/violet"
                                android:layout_marginTop="-3dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/studentQuizAnswer_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scoreboard"
                style="@style/text_quicksand_bold.header2"
                android:textColor="@color/violet"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/studentClassScore_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>