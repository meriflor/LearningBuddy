<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3268D4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:text="Class"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#f3f3f3"
            android:textSize="20sp"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_class_year_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_class_name"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Class Year Level"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#f3f3f3"
            android:fontFamily="@font/quicksand"
            app:layout_constraintTop_toBottomOf="@id/tv_class_name"
            app:layout_constraintLeft_toLeftOf="@id/tv_class_name"
            app:layout_constraintRight_toRightOf="@id/tv_class_name"/>

        <TextView
            android:id="@+id/tv_class_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_class_year_level"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/quicksand"
            android:text="Class Section"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#f3f3f3"
            app:layout_constraintTop_toBottomOf="@id/tv_class_year_level"
            app:layout_constraintLeft_toLeftOf="@id/tv_class_year_level"
            app:layout_constraintRight_toRightOf="@id/tv_class_year_level"/>

        <TextView
            android:id="@+id/tv_extra_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_class_year_level"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/quicksand"
            android:text="extra infoasdfasdfasdf"
            android:textStyle="italic"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#f3f3f3"
            app:layout_constraintTop_toBottomOf="@id/tv_class_section"
            app:layout_constraintLeft_toLeftOf="@id/tv_class_section"
            app:layout_constraintRight_toRightOf="@id/tv_class_section"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_extra_info"
            app:layout_constraintEnd_toEndOf="@+id/tv_class_section"
            app:layout_constraintTop_toTopOf="@+id/tv_class_name"
            app:srcCompat="@drawable/c_bookbackground" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/classtransparency"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/class_backgroundopacity" />

</androidx.constraintlayout.widget.ConstraintLayout>