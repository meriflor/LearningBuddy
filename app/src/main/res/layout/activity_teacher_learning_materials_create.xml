<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/violet"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/closeImage_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_close_02"
                android:padding="5dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
            <ImageView
                android:id="@+id/postImage_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_post_white"
                android:padding="5dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/postTitle_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/textHint"
            android:hint="Enter post title"
            android:textColor="@color/white"
            style="@style/text_quicksand.body2" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/postContent_editText"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:hint="Post content"
                style="@style/text_quicksand.body2"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="10dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attach Files:"
                            style="@style/text_quicksand_bold.body2"
                            android:textColor="@color/violet"
                            android:layout_gravity="center"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/phoneStorage_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_pressed_white_to_dirty_white"
                            android:src="@drawable/icon_phone"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/cloudStorage_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_pressed_white_to_dirty_white"
                            android:src="@drawable/icon_cloud"
                            android:padding="5dp"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fileName_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <EditText
                            android:id="@+id/fileName_editText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="File Name"
                            style="@style/text_quicksand.body2"
                            android:backgroundTint="@color/violet"
                            android:textColor="@color/violet"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:id="@+id/fileRemove_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_delete_3_red"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/background_pressed_white_to_dirty_white"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/fileName_addBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:text="Add"
                        style="@style/text_quicksand_bold.body2"
                        android:textColor="@color/white"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:layout_gravity="end"
                        android:layout_margin="5dp"
                        android:drawableStart="@drawable/icon_add_white"
                        android:background="@drawable/background_pressed_violet_to_light_violet"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fileToUploadList_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>