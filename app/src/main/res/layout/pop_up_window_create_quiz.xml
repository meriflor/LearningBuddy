<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="5dp"
    android:padding="20dp"
    android:layout_gravity="center">

    <EditText
        android:id="@+id/quiz_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/violet"
        android:hint="Quiz Title"
        android:textColor="#222222"
        android:singleLine="true"
        android:textColorHint="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/quiz_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/violet"
        android:hint="Content"
        android:textColor="#222222"
        android:singleLine="false"
        android:textColorHint="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/quiz_title"
        app:layout_constraintLeft_toLeftOf="@id/quiz_title"
        app:layout_constraintRight_toRightOf="@id/quiz_title"/>

    <Button
        android:id="@+id/quiz_btn_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginbtn"
        android:text="Create"
        android:backgroundTint="@color/violet"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/quiz_desc"
        app:layout_constraintLeft_toLeftOf="@id/quiz_desc"
        app:layout_constraintRight_toLeftOf="@id/quiz_btn_cancel"
        />

    <Button
        android:id="@+id/quiz_btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Cancel"
        android:background="@drawable/loginbtn"
        android:backgroundTint="@color/violet"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/quiz_desc"
        app:layout_constraintLeft_toRightOf="@id/quiz_btn_create"
        app:layout_constraintRight_toRightOf="@id/quiz_desc"/>
</androidx.constraintlayout.widget.ConstraintLayout>