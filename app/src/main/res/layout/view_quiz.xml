<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.teacher.quizzes.ViewQuizzesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/quizToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            app:titleTextColor="@color/violet"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginHorizontal="20dp">
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/quiz_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="32dp"
                    app:switchPadding="10dp"
                    android:checked="false"
                    android:text="Private"
                    android:textOff="off"
                    android:textOn="on"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:thumb="@drawable/on_off_btn"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/violet"
                    app:showText="false"
                    app:track="@drawable/track"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/quiz_settings"/>
                <ImageView
                    android:id="@+id/quiz_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/icon_settings_2"
                    android:contentDescription="Settings"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/quiz_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/violet"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="18dp"
                    />
                <TextView
                    android:id="@+id/quiz_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/violet"
                    android:textSize="16sp"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="10dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/quiz_questions_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f3f3f3"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_quiz_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:backgroundTint="#f3f3f3"
        android:src="@drawable/icon_add_2"
        android:contentDescription="Add New Question"
        app:fabSize="normal" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>