<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f3f3f3">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/violet"
            app:cardCornerRadius="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="35dp"
            app:contentPadding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/text_quicksand_bold.header"
                    android:text="Learning Materials"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/text_quicksand.body2"
                    android:text="Hi! This is Teacher's FIleSpace"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/add_learningMaterials_fileSpace_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_labelStyle="@style/customFab"
            app:fab_addButtonColorNormal="@color/white"
            android:elevation="5dp"
            app:fab_expandDirection="down"
            android:layout_marginEnd="-35dp"
            android:layout_marginTop="10dp"
            app:fab_addButtonColorPressed="@color/violet_light"
            app:fab_addButtonPlusIconColor="@color/violet"
            app:layout_constraintTop_toTopOf="@id/card"
            app:layout_constraintEnd_toEndOf="@id/card">
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/uploadFiles_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_size="mini"
                app:fab_title="Upload Files"
                app:fab_colorNormal="@color/white"
                app:fab_colorPressed="@color/violet_light"
                app:fab_icon="@drawable/icon_attachment"/>
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_size="mini"
                app:fab_title="Practise Reading"
                app:fab_colorNormal="@color/white"
                app:fab_colorPressed="@color/violet_light"
                app:fab_icon="@drawable/icon_attachment"/>
        </com.getbase.floatingactionbutton.FloatingActionsMenu>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@id/card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp">
                <LinearLayout
                    android:id="@+id/draft_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Drafts"
                            style="@style/text_quicksand_bold.body4"
                            android:textColor="@color/violet"/>
                        <TextView
                            android:id="@+id/draft_viewAll_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View all"
                            style="@style/text_quicksand.body2"
                            android:textColor="@color/violet"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/draft_learningMaterials_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Posts"
                            style="@style/text_quicksand_bold.body4"
                            android:textColor="@color/violet"/>
                        <TextView
                            android:id="@+id/post_viewAll_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Viel all"
                            style="@style/text_quicksand.body2"
                            android:textColor="@color/violet"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/posts_noListYet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You have no post yet"
                        android:layout_marginVertical="20dp"
                        style="@style/text_quicksand.body2"
                        android:textColor="@color/violet"
                        android:layout_gravity="center"
                        android:visibility="gone"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/posts_learningMaterials_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>