<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.learningbuddy">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:name="com.project.learningbuddy.firebase.LearningBuddy"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearningBuddy">
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".useractivity.Homepage"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.TeacherClassroomActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.TeacherSettingsActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.TeacherClassroomPeople"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.quizzes.TeacherQuizzesActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.quizzes.ViewQuizzesActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.quizzes.TeacherCreateQuestion"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.announcement.TeacherAnnouncementActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.announcement.TeacherCreateAnnouncement"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.announcement.ViewAnnouncementActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.learningmaterials.TeacherLearningMaterialsActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.learningmaterials.TeacherCreateLearningMaterials"
            android:exported="true"/>
        <activity
            android:name=".ui.teacher.learningmaterials.ViewLearningMaterialActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.student.StudentClassroomActivity"
            android:exported="true"/>

        <activity
            android:name=".Splashcreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>